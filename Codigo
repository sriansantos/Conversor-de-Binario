                while segundo_numero > 1:
                    binario = segundo_numero % 2
                    resultsegundo.append(binario)
                    segundo_numero //= 2
                resultsegundo.append(segundo_numero)
                resultsegundo.reverse()
                print("O primeiro número em decimal é:", resultsegundo)

                print('A multiplicação desses números é:', resultado)
                decimal = resultado
                result = []
                opcao = int()

                while decimal > 1:  # enquanto o numero decimal for maior que vai ficar dividindo
                    binario = decimal % 2  # resto da divisão
                    result.append(binario)  # aqui vai adicionar na lista de binario
                    decimal //= 2  # aqui vai dividir o número por 2
                result.append(decimal)  # aqui vai pegar o que sobrar da divisão e colocar no ultimo ponto
                result.reverse()  # aqui
                print("O seu número decimal em binario é:", result)
            case(3):
                primeiro_numero = (int(input('Escreva seu número decimal: ')))
                segundo_numero = (int(input('Escreva seu segundo número: ')))
                resultado = multiplicação(primeiro_numero, segundo_numero)
                resultprimeiro = []
                while primeiro_numero > 1:
                    binario = primeiro_numero % 2
                    resultprimeiro.append(binario)
                    primeiro_numero //= 2
                resultprimeiro.append(primeiro_numero)
                resultprimeiro.reverse()
                print("O primeiro número em decimal é:", resultprimeiro)

                resultsegundo = []
                while segundo_numero > 1:
                    binario = segundo_numero % 2
                    resultsegundo.append(binario)
                    segundo_numero //= 2
                resultsegundo.append(segundo_numero)
                resultsegundo.reverse()
                print("O primeiro número em decimal é:", resultsegundo)

                print('A soma desses número é:', resultado)
                decimal = resultado
                result = []
                opcao = int()

                while decimal > 1:  # enquanto o numero decimal for maior que vai ficar dividindo
                    binario = decimal % 2  # resto da divisão
                    result.append(binario)  # aqui vai adicionar na lista de binario
                    decimal //= 2  # aqui vai dividir o número por 2
